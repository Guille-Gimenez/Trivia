<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmento2">

    <TextView

        android:id="@+id/txtPregunta2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="90dp"
        android:textAlignment="center"
        android:text="Pregunta 2" />

    <TextView
        android:id="@+id/txtDepregunta2"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="150dp"
        android:textAlignment="center"
        android:text="El segundo planeta del sistema solar es?" />

    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="280dp">

        <RadioButton
            android:id="@+id/rdBtnOpc1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Mercurio" />

        <RadioButton
            android:id="@+id/rdBtnOpc2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Tierra" />

        <RadioButton
            android:id="@+id/rdBtnOpc3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Venus" />
    </RadioGroup>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="130dp"
        android:layout_marginVertical="525dp"
        android:backgroundTint="#A63446"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#0C6291"
        android:layout_marginVertical="630dp"
        android:layout_marginHorizontal="130dp"
        android:text="Button" />


</FrameLayout>